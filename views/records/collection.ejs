<h1 class="title"><%= title %></h1>

<div class="columns is-multiline">
  <% records.forEach((product) => { %>
    <div class="column is-one-third-desktop is-half-tablet is-multiline">
    <a href="/records/<%= product._id %>">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by4 is-square">
            <img src="<%= product.image %>" alt="<%= product.name %>">
          </figure>
        </div>
        <div class="card-content">
          <div class="content">
            <h4 class="title is-4">
            </h4>
            <h6 class="subtitle is-4 is-light">Title: <%= product.title %></h6>
            <h6 class="subtitle is-5">Artist: <%= product.artist %></h6>
            <h6 class="subtitle is-6">Format: <%= product.format %></h6>
            <h6 class="subtitle is-6">from Â£<%= product.price %></h6>
            <form action="./records/collection" method="post">
                  <button>Add to My Collection</button>
            </form>
          </div>
        </div>
      </div>
      </a>
    </div>
  <% }) %>
</div>
<footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <p>
        <strong>Vinyl Destination</strong> created by <a href="http://www.antonialston.com/">Antoni Alston</a>
      </p>
    </div>
  </div>
</footer>
