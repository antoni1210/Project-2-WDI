<h1 class="title"><%= title %></h1>

<div class="columns">
  <% records.forEach((product) => { %>
    <div class="column is-one-third-desktop is-half-tablet is-multiline">
      <div class="card">
        <div class="card-image">
          <figure class="image is-4by4">
            <img src="<%= product.image %>" alt="<%= product.name %>">
          </figure>
        </div>
        <div class="card-content">
          <div class="content">
            <h4 class="title is-4">
              <a href="/records/<%= product._id %>"
                <%= product.title %>
              </a>
             </h4>
            <h6 class="subtitle is-4 is-light">Title: <%= product.title %></h6>
            <h6 class="subtitle is-5">Artist: <%= product.artist %></h6>
            <h6 class="subtitle is-6">Format: <%= product.format %></h6>
            <h6 class="subtitle is-6">from Â£<%= product.price %></h6>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>
