<h2><%= record.name%></h2>
<div class="columns">
  <div class="column is-half">
    <img src="<%= record.image %>" alt="<%= record.name %>">
  </div>
    <div class="column is-size-4">
      <ul>
        <li>Title: <%= record.title %></li>
        <li>Artist: <%= record.artist %></li>
        <li>Format: <%= record.format %></li>
        <li>price: Â£<%= record.price %></li>
      </ul>
      <% if(locals.isLoggedIn){%>
        <a href="/records/<%= record.id %>/edit">Edit</a>
        <form action="/records/<%= record.id %>/" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <button name="button">Delete</button>
        </form>
      <% } %>
    </div>
  </div>
</div>
<footer class="footer">
  <div class="container">
    <div class="content has-text-centered">
      <p>
        <strong>Vinyl Destination</strong> created by <a href="http://www.antonialston.com/">Antoni Alston</a>
      </p>
    </div>
  </div>
</footer>
